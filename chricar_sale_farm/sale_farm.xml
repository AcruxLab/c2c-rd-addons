<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
    <record id="sale_order_line_farm_list" model="ir.ui.view">
      <field name="name">sale.order.line.list</field>
      <field name="model">sale.order.line</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Sale Order Line" editable="top">
          <field name="order_partner_id"/>
          <field name="order_id"/>
          <field name="date_order"/>
          <field name="product_id"/>
          <field name="product_uom_qty" string="Ordered Qty" sum="Ordered"/>
          <field name="delivered_qty" sum="Delivered"/>
          <field name="invoiced_qty" sum="Invoiced"/>
          <field name="diff_qty" sum="Diff"/>
          <field name="invoiced_price"/>
          <field name="invoiced_amount" sum="Invoiced"/>
        </tree>
      </field>
    </record>
    
        <record id="view_sales_order_line_farm_filter" model="ir.ui.view">
            <field name="name">sale.order.line.select</field>
            <field name="model">sale.order.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order Lines">
                    <field name="order_id"/>
                    <field name="order_partner_id"/>
                    <field name="product_id"/>
                    <field name="date_order"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Order" icon="terp-gtk-jump-to-rtl" domain="[]" context="{'group_by':'order_id'}"/>
                        <filter string="Partner" icon="terp-gtk-jump-to-rtl" domain="[]" context="{'group_by':'order_partner_id'}"/>
                        <filter string="Product" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter string="Date Order" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'date_order'}"/>
                    </group>
                </search>
            </field>
        </record>

    
    <record id="act_sale_order_line_farm" model="ir.actions.act_window">
        <field name="name">Sales Order Lines Farm</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sale_order_line_farm_list"/>
        <field name="search_view_id" ref="view_sales_order_line_farm_filter"/>
        <field name="help">Sales Statistics Farm delivery versus invoiced</field>
    </record>

    
    <menuitem id="sale_order_line_stat" parent="base.next_id_64" action="act_sale_order_line_farm"/>
 
 
    </data>
</openerp>  
